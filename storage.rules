rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && (
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true ||
        'app admin' in get(/databases/(default)/documents/users/$(request.auth.uid)).data.userRoles
      );
    }

    match /site_improvements/{requestId}/{fileName} {
      allow read: if isAdmin();
      allow create: if isAdmin() && request.resource.size < 10 * 1024 * 1024;
      allow delete: if isAdmin();
      allow update: if false;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

